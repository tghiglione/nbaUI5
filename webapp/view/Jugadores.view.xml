<mvc:View
	controllerName="nba.controller.Jugadores"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns="sap.m"
	xmlns:f="sap.f"
	xmlns:layout="sap.ui.layout"
	height="100%">
	<f:DynamicPage id="dynamicPageId" headerExpanded="{/headerExpanded}" toggleHeaderOnTitleClick="{/titleClickable}">
		<f:title>
			<f:DynamicPageTitle id="_IDGenDynamicPageTitle1">
				<f:heading>
					<Title id="_IDGenTitle1" text="{NOMBRE}"/>
				</f:heading>
				<f:expandedContent>
					<Image id="_IDGenImage2" src="{IMAGEN}" width="10em"/>
				</f:expandedContent>
				<f:actions>
					<Button id="_IDGenButton1"
							text="{i18n>editar}"
							type="Emphasized"
							press="openEditEquipo"/>
				</f:actions>
			</f:DynamicPageTitle>
		</f:title>
		<f:header>
			<f:DynamicPageHeader id="_IDGenDynamicPageHeader1" pinnable="true">
				<layout:HorizontalLayout id="_IDGenHorizontalLayout1" allowWrapping="true">
					<layout:VerticalLayout id="_IDGenVerticalLayout1" class="sapUiMediumMarginEnd">
						<ObjectAttribute id="_IDGenObjectAttribute1" title="{i18n>ciudad}" text="{CIUDAD}"/>
						<ObjectAttribute id="_IDGenObjectAttribute2" title="{i18n>estadio}" text="{ESTADIO}"/>
					</layout:VerticalLayout>
					<layout:VerticalLayout id="_IDGenVerticalLayout2">
						<ObjectAttribute id="_IDGenObjectAttribute3" title="{i18n>conferencia}"/>
						<ObjectStatus id="_IDGenObjectStatus1" text="{CONFERENCIA}" state="Success" />
					</layout:VerticalLayout>
				</layout:HorizontalLayout>
			</f:DynamicPageHeader>
		</f:header>
		<f:content>
			<Table id="jugadoresTable"
					sticky="HeaderToolbar,ColumnHeaders"
					inset="false"
					items="{To_Jugadores}"
					class="sapFDynamicPageAlignContent"
					width="auto"
					>
					<headerToolbar>
					<Toolbar id="_IDGenToolbar2">
						<Text id="_IDGenText6" text="{i18n>filtrarPosicion}"/>
						<Select id="selectPosicion" selectedKey="0" forceSelection="false">
							<items>
								<core:Item id="_IDGenItem0" key="0" text=""/>	
								<core:Item id="_IDGenItem1" key="1" text="{i18n>base}"/>
								<core:Item id="_IDGenItem2" key="2" text="{i18n>alero}"/>
								<core:Item id="_IDGenItem3" key="3" text="{i18n>escolta}"/>
								<core:Item id="_IDGenItem4" key="4" text="{i18n>alaPivot}"/>
								<core:Item id="_IDGenItem5" key="5" text="{i18n>pivot}"/>
							</items>
						</Select>
						<ToolbarSeparator id="_IDGenToolbarSeparator3" />
						<Text id="_IDGenText7" text="{i18n>ordenarPor}"/>
						<Select id="selectSort" selectedKey="0" forceSelection="false">
							<items>
								<core:Item id="_IDGenItem9" key="0" text=""/>	
								<core:Item id="_IDGenItem6" key="1" text="Nombre"/>
								<core:Item id="_IDGenItem7" key="2" text="Altura"/>
								<core:Item id="_IDGenItem8" key="3" text="Edad"/>
							</items>
						</Select>						
						<ToolbarSeparator id="_IDGenToolbarSeparator4" />
						<Text id="_IDGenText" text="{i18n>agruparPor}"/>
						<Select id="selectGroup" selectedKey="0" forceSelection="false">
							<items>
								<core:Item id="_IDGenItem10" key="0" text=""/>	
								<core:Item id="_IDGenItem11" key="1" text="Nacionalidad"/>
								<core:Item id="_IDGenItem12" key="2" text="Altura"/>
								<core:Item id="_IDGenItem13" key="3" text="Edad"/>
							</items>
						</Select>	
						<Button id="btnFilters" text="{i18n>filtrar}" icon="sap-icon://filter" press="onFilter"></Button>
						<Button id="btnClearFilters" text="{i18n>borrarFiltros}" icon="sap-icon://clear-filter" press="onClearFilter"></Button>
						<ToolbarSeparator id="_IDGenToolbarSeparator2" />
						<Button id="_IDGenButton"
							tooltip="Add"
							icon="sap-icon://add"
							text="{i18n>agregarJugador}"
							press="onOpenDialog"/>
					</Toolbar>
				</headerToolbar>
				
				<columns>
					<Column id="_IDGenColumn1"
							width="12em">
						<Text id="_IDGenText1" text="{i18n>jugador}" />
					</Column>
					<Column id="_IDGenColumn2"
							minScreenWidth="Tablet"
							demandPopin="true"
							hAlign="Center">
						<Text id="_IDGenText2" text="{i18n>posicion}" />
					</Column>
					<Column id="_IDGenColumn3" hAlign="Center"><Text id="_IDGenText5" text="{i18n>eliminar}" /></Column>
				</columns>
				<items>
					<ColumnListItem id="_IDGenColumnListItem1" type="Navigation" press="onListItemPress">
						<cells>
							<ObjectIdentifier id="_IDGenObjectIdentifier1"
									title="{APELLIDO}"
									text="{NOMBRE}"/>
							<Text id="_IDGenText4"
									text="{POSICION}" />
							<Button id="_IDGenButtonDelete"
									tooltip="Delete"
									icon="sap-icon://delete"
									press="deletePlayer"
									type="Reject"
									/>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</f:content>
	</f:DynamicPage>
</mvc:View>