<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" >
    <Dialog id="openAddMapa" title="{i18n>agregarMapa}">
        <VBox id="_IDGenVBox1" class="sapUiMediumMargin">
            <Label id="labelNombre" text="{i18n>nombre}" labelFor="inputNombre" />
            <Input id="inputNombre" />
            <Label id="labelLatitud" text="{i18n>Latitud}" labelFor="inputLatitud" />
            <Input id="inputLatitud" />
            <Label id="labelLongitud" text="{i18n>longitud}" labelFor="inputLongitud" />
            <Input id="inputLongitud" />
        </VBox>
        <beginButton>
            <Button class="sapUiResponsiveMargin" id="btn-agregar" press="onAddMapa" text="{i18n>agregar}"  type="Emphasized"/>
        </beginButton>
        <endButton>
            <Button id="btn-close" press="onCloseDialog" text="{i18n>cancelar}"/>
        </endButton>  
    </Dialog>
</core:FragmentDefinition>